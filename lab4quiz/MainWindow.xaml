<Window x:Class="lab4quiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4quiz" xmlns:vm="clr-namespace:lab4quiz.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
            <Button Content="Tryb edycji" Command="{Binding ShowEditorCommand}" Width="100" Margin="5" />
            <Button Content="Tryb rozwiązywania" Command="{Binding ShowSolverCommand}" Width="150" Margin="5" />
        </StackPanel>
        <ContentControl Content="{Binding CurrentViewModel}" />
    </DockPanel>
</Window>
