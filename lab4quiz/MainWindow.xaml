<Window x:Class="lab4quiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4quiz" xmlns:vm="clr-namespace:lab4quiz.ViewModel"
        mc:Ignorable="d"
        Title="Quiz" Height="500" Width="900">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <!-- Menu -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="LightGray" Margin="10">
            <Button Content="Generator quizu" Command="{Binding ShowEditorViewCommand}" Margin="0,0,10,0"/>
            <Button Content="Rozwiąż quiz" Command="{Binding ShowSolverViewCommand}"/>
        </StackPanel>

        <!-- Główny widok -->
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </DockPanel>
</Window>
