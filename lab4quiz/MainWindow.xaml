<Window x:Class="lab4quiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4quiz" xmlns:vm="clr-namespace:lab4quiz.ViewModel"
        mc:Ignorable="d"
        Title="Quiz" Height="500" Width="900">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
        <TextBlock Text="Wybierz tryb:" FontSize="18" Margin="0,0,0,20"/>
        <Button Content="Edytor Quizu" Width="200" Height="40" Margin="0,0,0,10"
                Command="{Binding OpenGeneratorViewCommand}"/>
        <Button Content="Rozwiązywanie Quizu" Width="200" Height="40"
                Command="{Binding OpenSolverViewCommand}"/>
    </StackPanel>
</Window>
